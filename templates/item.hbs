<li class="item flexrow fav-item" data-item-id="{{item._id}}">
    <div class="item-name flexrow rollable">
        <div class="item-image" style="background-image: url({{item.img}})"></div>
        <h4>{{item.name}}{{item.spellPrepMode}}</h4>
    </div>
    <div class="labels">
        {{#each item.favLabels as |label id|}}
            <span class="tag">{{label}}</span>
        {{/each}}
    </div>
    {{#if item.data.quantity}} 
        <div class="item-detail count">
            <input class="item-count" data-path="data.quantity" type="text" value="{{item.data.quantity}}" {{#if item.editable}}{{else}}disabled{{/if}}> 
        </div>
    {{/if}}
    <div class="item-detail uses">
        {{#if item.data.uses.max}}
            <span style="display:inline;">(</span>
                <input data-path="data.uses.value" type="text" value="{{item.data.uses.value}}" {{#if item.editable}}{{else}}disabled{{/if}}>
            <span style="display:inline;">/</span>
                <input data-path="data.uses.max" type="text" value="{{item.data.uses.max}}" {{#if item.editable}}{{else}}disabled{{/if}}>        
            <span style="display:inline;">)</span>
        {{else}}
            {{#if item.editable}}<a class="addCharges" value="Add Charges">Add Charges</a>{{/if}}
        {{/if}}
    </div>
    <div class="item-detail item-controlls">
        <a class="item-control item-edit" title="Edit Item" > <i class="fas fa-edit" ></i></a>
        <a class="item-control item-fav" title="Remove from favourites" > <i class="fas fa-sign-out-alt" ></i></a>
    </div>
</li>